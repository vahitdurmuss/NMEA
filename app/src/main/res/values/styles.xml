<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/wallet_holo_blue_light</item>
    </style>

    <style name="liveLabelStyle">
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/livelabel_background</item>
        <item name="android:textColor">#fff</item>
        <item name="android:height">30dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="labelStyle">
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/label_background</item>
        <item name="android:textColor">#fff</item>
        <item name="android:height">30dp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="labelStyle2">
        <item name="android:padding">5dp</item>
        <item name="android:textColor">#080707</item>
        <item name="android:height">30dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="buttonStyle">
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="buttonStyleLive">
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/livebutton_background</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textAlignment">center</item>
    </style>


</resources>
